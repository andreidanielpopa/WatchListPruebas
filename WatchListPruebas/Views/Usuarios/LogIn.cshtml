<div class="mx-auto mt-10 flex max-w-md flex-col gap-4 rounded-lg bg-gray-800 p-6 text-white shadow-lg">
    <h1 class="text-2xl font-bold text-yellow-400">Iniciar sesión</h1>

    <form method="post" class="flex flex-col gap-4">
        <div class="flex flex-col gap-2">
            <label for="usuario" class="font-medium text-gray-300">
                Usuario:
            </label>
            <input type="text" name="nombreUsuario" placeholder="Ingresa tu usuario"
                   class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" />
        </div>

        <div class="flex flex-col gap-2">
            <label for="password" class="font-medium text-gray-300">
                Contraseña:
            </label>
            <input type="password" name="password" placeholder="Ingresa tu contraseña"
                   class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" />
        </div>

        <div class="mt-2 flex items-center justify-between">
            <button type="submit"
                    class="rounded-lg bg-yellow-400 px-6 py-2 font-bold text-gray-900 transition-colors hover:bg-yellow-500">
                Iniciar sesión
            </button>
        </div>
    </form>

    @if (ViewData["mensaje"] != null)
    {
        <div class="mt-4 rounded-md bg-red-500/20 p-3 text-center text-red-300">
            @ViewData["mensaje"]
        </div>
    }
</div>