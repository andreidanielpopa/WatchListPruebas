<div class="mx-auto mt-10 flex max-w-md flex-col gap-4 rounded-lg bg-gray-800 p-6 text-white shadow-lg">
	<h1 class="text-2xl font-bold text-yellow-400">Crear nueva lista</h1>
	<form method="post" class="flex flex-col gap-4">
		<div class="flex flex-col gap-2">
			<label class="font-medium text-gray-300">Nombre</label>
			<input type="text" name="nombre" value="" class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" placeholder="Nombre de la lista" />
		</div>
		<input type="hidden" name="idusuario" value="@Context.User.FindFirst(ClaimTypes.NameIdentifier).Value" class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" />

		<input type="hidden" name="idtipolista" value="3" class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white focus:border-yellow-400 focus:outline-none" />

		<div class="flex flex-col gap-2">
			<label class="font-medium text-gray-300">Visibilidad</label>
			<select name="espublica" class="rounded-md border border-slate-600 bg-slate-700/70 px-3 py-2 text-white focus:border-yellow-400 focus:outline-none">
				<option value="true">Pública</option>
				<option value="false">Privada</option>
			</select>
		</div>

		<button type="submit" class="mt-2 w-full rounded-lg bg-yellow-400 p-3 text-center font-bold text-gray-900 transition-colors hover:bg-yellow-500">
